{
    "compilerOptions": {
        "module": "commonjs",
        "target": "ES2018",
        "moduleResolution": "node",
        "lib": [
            "es6"
        ],
        "esModuleInterop": true,
        "sourceMap": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "declaration": true,
        "strict": true,
        "alwaysStrict": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitAny": true,
        "strictFunctionTypes": true,
        "strictNullChecks": true,
        "noImplicitThis": true
    },
    "exclude": [
        "node_modules",
        "dist"
    ]
}
